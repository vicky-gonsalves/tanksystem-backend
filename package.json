{
  "name": "tanksystem",
  "version": "0.0.0",
  "main": "src",
  "private": true,
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "test": "jest",
    "test:unit": "npm test \"src/**/!(index).test.js\"",
    "test:integration": "npm test \"src/**/index.test.js\"",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "dev": "nodemon -i \"*.test.js\" .",
    "prod": "cross-env NODE_ENV=production nodemon -i \"*.test.js\" -r dotenv-safe/config .",
    "lint": "eslint src",
    "docs": "apidoc -i src -o docs && apidoc-markdown -p docs -o DOCS.md",
    "postdocs": "opn docs/index.html",
    "staging_push_and_deploy": "git push origin HEAD:development",
    "prod_push_and_deploy": "git push origin HEAD:master && git push heroku HEAD:master",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build --detach",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --build"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js"
  },
  "devDependencies": {
    "apidoc": "^0.51.1",
    "apidoc-markdown": "^7.1.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.1.0",
    "eslint": "^8.16.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest-cli": "^28.1.0",
    "mockgoose": "^8.0.4",
    "nock": "^13.2.4",
    "nodemon": "^2.0.16",
    "opn-cli": "^1.0.0",
    "sinon": "^14.0.0",
    "supertest": "^6.2.3"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.20.0",
    "bodymen": "^1.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-force-ssl": "^0.3.2",
    "moment": "^2.29.3",
    "mongoose": "^6.4.6",
    "mongoose-create-unique": "^0.4.4",
    "mongoose-keywords": "^0.4.1",
    "morgan": "^1.10.0",
    "periodic-ping": "^2.0.0",
    "pm2": "^5.2.0",
    "querymen": "^2.1.4",
    "raspiinfo": "^1.0.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "web-push": "^3.5.0",
    "wol": "^1.0.7"
  }
}
